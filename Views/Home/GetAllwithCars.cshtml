@model List<CarBrand>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">

                        <div class="text">
                            <h2 class="mb-0"><a href="/Car/GetAllCarsbyBrandId/@item.ID">@item.BrandName</a></h2>

                            @if (User.IsInRole("ADMIN"))
                            {
                                <p class="d-flex mb-0 d-block"><a href="/Brand/EditBrand/@item.ID" class="btn btn-secondary py-2 ml-2">Edit</a><a href="/Brand/DeleteBrand/@item.ID" class="btn btn-primary ml-2 py-2 mr-1">Remove</a></p>
                                <br />
                                <p class="d-flex mb-0 d-block"><a href="/CarModelName/GetAllinBrandid/@item.ID" class="btn btn-secondary pl-2 py-2  ml-2">View ModelsName</a><a href="/Car/GetAllCarsbyBrandId/@item.ID" class="btn btn-primary ml-2 py-2 mr-2">View Cars</a></p>
                            }
                            else
                            {

                                <p class="d-flex mb-0 d-block"><a href="/Car/GetAllCarsbyBrandId/@item.ID" class="btn btn-primary py-2 mr-1">View Cars</a></p>

                            }
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>

@if (User.IsInRole("ADMIN"))
{
<div>
    <a href="/Brand/NewBrand">Add Brand </a>
</div>
}